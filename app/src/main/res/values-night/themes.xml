<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blue</item>
        <item name="colorSecondaryVariant">@color/yellow</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="noActionBar" parent="Theme.MyApplication">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="tasbeh_button_style" parent="Theme.MyApplication">
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="cornerRadius">350dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">19dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">28dp</item>
    </style>

    <style name="items_style" parent="Theme.MyApplication">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_margin">28dp</item>
    </style>

    <style name="tasbeh_number_style" parent="Theme.MyApplication">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/dark_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_margin">28dp</item>
    </style>

    <style name="bottom_Nav_bar" parent="Theme.MyApplication">
        <item name="android:background">@color/dark_blue</item>
    </style>

    <style name="dividers_color" parent="Theme.MyApplication">
        <item name="android:background">@color/yellow</item>
    </style>


    <style name="text_color" parent="Theme.MyApplication">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="contents_color" parent="Theme.MyApplication">
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="cardBackground" parent="Theme.MyApplication">
        <item name="cardBackgroundColor">@color/dark_blue</item>
    </style>

    <style name="backArrowColor" parent="Theme.MyApplication">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="radiobuttonColor" parent="Theme.MyApplication">
        <item name="android:tint">@color/yellow</item>
    </style>
</resources>